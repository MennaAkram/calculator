<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/PaddingLarge"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TextViewHeight"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="12"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sizeTextView" />

    <TextView
        android:id="@+id/input_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/TextViewHeight"
        android:gravity="center_vertical"
        android:inputType="number"
        android:maxLength="12"
        android:textColor="@color/colorText"
        android:textSize="@dimen/sizeTextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/binary_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ConButtons"
            android:text="@string/BinaryTextButton"
            android:onClick="onClickNumber" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decimal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ConButtons"
            android:text="@string/DecimalTextButton"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/octal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ConButtons"
            android:text="@string/OctalTextButton"
            android:onClick="onClickNumber"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/hexaDecimal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/ConButtons"
            android:text="HexaDecimal"
            android:onClick="onClickNumber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="A"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="B"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="C"
            android:onClick="onClickNumber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="7"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="8"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nine_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="9"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/d_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="D"
            android:onClick="onClickNumber" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="4"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="5"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="6"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/e_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="E"
            android:onClick="onClickNumber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="1"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="2"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="3"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/f_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="F"
            android:onClick="onClickNumber"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clearAll_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="AC"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="0"
            android:onClick="onClickNumber"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dot_button"
            android:layout_width="@dimen/buttonsWidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Buttons"
            android:text="."
            android:onClick="onClickNumber"/>

    </LinearLayout>

</LinearLayout>
